<!DOCTYPE html>
<html lang="en">
<head>
    <title>Forgot-Password</title>
    <%- include('front-head.ejs') %>
</head>
<body>
    <section class="login-page">
        <div class="container">
            <div class="row">
                <div class="login-contain">
                    <div class="col-xxl-12 d-flex  align-items-center py-5" style="height: 100vh; min-height: 800px;">
                        <div class="col-xxl-6 d-flex col-lg-6 d-flex justify-content-end d-xs-none d-sm-none d-md-none d-lg-flex">
                            <img src="/public/img/forgot.png" class="img-fluid" alt="">
                        </div>
                        <div class="col-xxl-6 col-xs-12 col-sm-12 col-md-12 col-lg-6 d-flex justify-content-center">
                            <div class=" col-xxl-8 d-flex justify-content-end">
                            <div class="login-container d-flex ">
                                <div class="">
                                    <h2>Welcome To Fastkart</h2>
                                    <span>Forgot your password</span>
                                </div>
                                <form action="/forgot-password" method="post">
                                    <div class="form-group">
                                        <input type="email" id="email" name="email" placeholder="Email address"
                                            required>
                                    </div>
                                    <a href="#">
                                        <button type="submit" class="login-btn">Forgot Password</button>
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>